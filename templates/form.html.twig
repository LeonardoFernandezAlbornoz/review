{% extends 'base.html.twig' %}


{% block body %}
	{{ form_start(form) }}
	<div class="m-3">
		{{ form_label(form.description,"Description:") }}
		{{ form_widget(form.description) }}
	</div>
	<div class="m-3">
		{{ form_label(form.idCategory,"Category:") }}
		{{ form_widget(form.idCategory) }}

	</div>

